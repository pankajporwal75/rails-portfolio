<% unless flash.empty? %>
  <script type="text/javascript">
      <% flash.each do |f| %>
      <% type = f[0].to_s == 'alert' ? 'error' : 'success' %>
      toastr['<%= type %>']('<%= f[1] %>', {timeOut: 5000,closeButton: true,progressBar: true, positionClass: "toast-bottom-right"});
      <% end %>
  </script>
<% end %>
