<div class="d-flex justify-content-between ms-0 m-4">
  <div class="float-left">
    <h1><%= @resume.title %></h1>
  </div>
  <div class="float-right">
    <%= link_to "Edit",edit_resume_path(@resume), class: "btn btn-dark float-right" %>
  </div>
</div>

<div>
  <%= image_tag @resume.file.preview(resize_to_limit: [100, 100]) %>
</div>

<div>
  <%= link_to "Back to resumes", resumes_path, class: 'btn btn-light' %>

  <%= button_to "Destroy this resume", @resume, method: :delete, class: 'btn btn-danger' %>
</div>
